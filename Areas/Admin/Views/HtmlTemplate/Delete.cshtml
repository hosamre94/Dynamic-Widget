@model MrCMS.Web.Apps.DynamicWidget.Entities.HtmlTemplate
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}

@using (Html.BeginForm("Delete", "HtmlTemplate", new {Model.Id}, FormMethod.Post))
{
    <fieldset>
        <legend>
            @await Html.Resource("Admin Html Template Delete", "Delete Html Template")
            <span class="btn-group d-inline pull-right">
                <button type="submit" class="btn-danger btn">@await Html.Resource("Delete")</button>
            </span>
        </legend>
        @Html.InfoBlock(await Html.Resource("Heads up") + "!", await Html.Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}